{
  "batch_size":32,
  "num_epochs":100,
  "sorta_epoch":1,
  "ckpt":"examples/asr/switchboard/ckpts/mpc",
  "summary_dir":"examples/asr/switchboard/ckpts/mpc/event",
  "solver_gpu":[],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
  },

  "model": "mpc",
  "num_classes": 40,
  "model_config":{
    "return_encoder_output":false,
    "num_filters":512,
    "d_model":512,
    "num_heads":8,
    "num_encoder_layers":12,
    "dff":2048,
    "rate":0.1,
    "chunk_size":1,
    "keep_probability":0.8
  },

  "optimizer": "warmup_adam",
  "optimizer_config":{
    "d_model":512,
    "warmup_steps":2000,
    "k":0.3
  },

  "dataset_builder":"speech_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv": "examples/asr/switchboard/data/switchboard.csv",
    "audio_config":{"type":"Fbank", "filterbank_channel_count":40},
    "cmvn_file":"examples/asr/switchboard/data/cmvn",
    "num_cmvn_workers": 8,
    "input_length_range":[10, 16000]
  },
  "devset_config":{
    "data_csv": "examples/asr/switchboard/data/hub500.csv",
    "audio_config":{"type":"Fbank", "filterbank_channel_count":40},
    "cmvn_file":"examples/asr/switchboard/data/cmvn"
  }
}
